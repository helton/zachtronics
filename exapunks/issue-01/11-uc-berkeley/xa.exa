GRAB 300

COPY F X
MARK SEND_HOST
  COPY X M
  TEST X = M
  FJMP SEND_HOST

COPY F X
MARK SEND_WORD
  COPY X M
  TEST X = M
  FJMP SEND_WORD

DROP
MAKE

NOTE ECHO OFFSET BACK
COPY M X
COPY X M

NOTE COPY FILE
COPY M X
MARK COPY_FILE
  NOTE COPY CONTENT
  COPY M F
  NOTE ECHO SIZE BACK
  COPY X M
  NOTE CMP SIZE X POS
  TEST X = M
  FJMP COPY_FILE